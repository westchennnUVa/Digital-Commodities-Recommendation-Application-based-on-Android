<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="20dp"
    android:background="@drawable/beijing"
    android:weightSum="1">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_weight="0.07"
        android:weightSum="1">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#ffffffff"
            android:background="@drawable/bg_border3"
            android:id="@+id/userInput"
            android:textSize="20sp"
            android:paddingLeft="8dp"
            android:hint="请用户输入想要检索的产品名称"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:weightSum="2">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/userInputConfirmButton"
            android:layout_gravity="left"
            android:background="@drawable/bg_button1"
            android:layout_weight="1"
            android:text="京东商品" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="淘宝商品"
            android:id="@+id/userInputConfirmButtonTmall"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="@drawable/bg_button2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/jingdongmiaosha"
            android:layout_gravity="left"
            android:background="@drawable/bg_button2"
            android:layout_weight="1"
            android:text="查看京东\n秒杀商品" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="查看淘宝\n金牌卖家"
            android:id="@+id/jinpaimaijia"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="@drawable/bg_button1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/jingdongtuijianjiage"
            android:layout_gravity="left"
            android:background="@drawable/bg_button1"
            android:layout_weight="1"
            android:text="京东商品\n推荐度排序\n价格为主" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="淘宝商品\n推荐度排序\n价格为主"
            android:id="@+id/taobaotuijianjiage"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="@drawable/bg_button2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/jingdongtuijianzhiliang"
            android:layout_gravity="left"
            android:background="@drawable/bg_button2"
            android:layout_weight="1"
            android:text="京东商品\n推荐度排序\n质量为主" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="淘宝商品\n推荐度排序\n质量为主"
            android:id="@+id/taobaotuijinzhiliang"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="@drawable/bg_button1"/>
    </LinearLayout>

</LinearLayout>